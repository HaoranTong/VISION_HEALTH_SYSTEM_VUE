/* 功能说明：数据上传页面样式 */
/* 使用说明：控制页面布局和组件样式 */

.container {
  padding: 30rpx;
}

.header {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
}

.image-preview {
  margin-top: 20rpx;
  position: relative;
}

.image-preview image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 0, 0, 0.7);
  color: white;
  border-radius: 50%;
}

.submit-btn {
  margin-top: 40rpx;
  background: #4CAF50;
  color: white;
}